		<obout:Grid id="grid1" runat="server" CallbackMode="true" Serialize="true" AutoGenerateColumns="false"
			 FolderStyle="styles/black_glass" EnableRecordHover="true" AllowAddingRecords="false">
			<Columns>				
				<obout:Column DataField="ShipName" Wrap="false" HeaderText="NAME" Width="125" runat="server"/>
